FROM node:20-alpine AS base 

FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

COPY package*.json ./
RUN npm ci

FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

ENV NEXT_TELEMETRY_DISABLED 1
ENV NODE_ENV production

ARG MONGODB_URI_B
ARG EDGE_SERVER_HOST_B
ARG REMOTE_EDGE_USER_B
ARG MONGODB_DATABASE_NAME_B
ARG REALM_APP_ID_B
ARG APP_SERVICES_URI_B
ARG API_KEY_B
ARG CHARTS_EMBED_SDK_BASEURL_B
ARG DASHBOARD_ID_PRODUCT_B
ARG DASHBOARD_ID_GENERAL_B
ARG DEMO_INDUSTRY_B

ENV MONGODB_URI=${MONGODB_URI_B}
ENV EDGE_SERVER_HOST=${EDGE_SERVER_HOST_B}
ENV REMOTE_EDGE_USER=${REMOTE_EDGE_USER_B}
ENV MONGODB_DATABASE_NAME=${MONGODB_DATABASE_NAME_B}
ENV REALM_APP_ID=${REALM_APP_ID_B}
ENV APP_SERVICES_URI=${APP_SERVICES_URI_B}
ENV API_KEY=${API_KEY_B}
ENV CHARTS_EMBED_SDK_BASEURL=${CHARTS_EMBED_SDK_BASEURL_B}
ENV DASHBOARD_ID_PRODUCT=${DASHBOARD_ID_PRODUCT_B}
ENV DASHBOARD_ID_GENERAL=${DASHBOARD_ID_GENERAL_B}
ENV DEMO_INDUSTRY=${DEMO_INDUSTRY_B}

RUN npm run build

FROM base AS runner
WORKDIR /app

ENV NODE_ENV production
ENV NEXT_TELEMETRY_DISABLED 1

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

USER nextjs

EXPOSE 3000

ENV PORT 3000

CMD ["npm", "start"]